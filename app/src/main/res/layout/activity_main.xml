<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#03DAC1"
    >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_96"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt2"
        app:layout_constraintTop_toTopOf="@id/txt2"
        android:textColor="#0D0E0E"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:textColor="#0D0E0E"

        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_11"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/txt2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt2"
        android:textStyle="italic"
        android:textColor="#0D0E0E"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="@string/_111"
        android:textColor="#F3F0F0"
        android:textSize="50sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        app:layout_constraintEnd_toEndOf="@id/btn3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintVertical_bias="0.943" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="onClick"
        android:text="@string/_222"
        android:textSize="50sp"
        android:textStyle="italic|bold"
        android:textColor="#F5F6F6"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintEnd_toEndOf="@id/btn4"
        app:layout_constraintStart_toStartOf="@id/btn4"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintBaseline_toBaselineOf="@id/btn1"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="50sp"
        android:text="@string/_444"
        app:layout_constraintRight_toLeftOf="@id/btn4"
        app:layout_constraintBottom_toBottomOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:onClick="onClick"
        android:textStyle="italic|bold"
        android:background="@color/colorPrimary"
        android:textColor="#F4F3F6"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/_555"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        android:onClick="onClick"
        android:textStyle="italic|bold"
        android:background="@color/colorPrimary"
        android:textColor="#FAF9FB"
        />
</androidx.constraintlayout.widget.ConstraintLayout>